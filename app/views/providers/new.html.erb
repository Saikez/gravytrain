<!DOCTYPE html>
<html>
  <head>
    <title>Provider Registration</title>
  </head>
  <body>
    <h1>Provider Registration</h1>

    <%= simple_form_for(@provider) do |f| %>
      <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :postcode %>
        <%= f.input :about_me %>
        <%= f.input :paypal_email %>
        <%= f.input :accepted_terms, as: :boolean %>
        <%= f.submit %>
    <% end %>
  </body>
</html>
